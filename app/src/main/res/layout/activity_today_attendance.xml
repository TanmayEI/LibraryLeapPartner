<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:background="@drawable/background_registration_image"
    tools:context=".activity.mainactivity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/today_attendance_back"
            android:layout_height="252dp">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:lines="2"
                android:text="Today's\nAttendance"
                android:fontFamily="@font/poppinssemibold"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

            </TextView>

            <ImageView
                android:id="@+id/back"
                android:layout_width="24dp"
                android:src="@drawable/back_arrow"
                android:layout_margin="10dp"
                android:layout_height="24dp">

            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="24dp"
                    android:src="@drawable/search"
                    android:layout_margin="10dp"
                    android:layout_centerVertical="true"
                    android:layout_height="24dp">

                </ImageView>

                <ImageView
                    android:layout_width="24dp"
                    android:src="@drawable/notific"
                    android:layout_margin="10dp"
                    android:layout_centerVertical="true"
                    android:layout_height="24dp">

                </ImageView>




            </LinearLayout>



        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/today_attendance"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>




    </LinearLayout>







</LinearLayout>