<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"

        android:orientation="horizontal"
        android:layout_gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:gravity="center"
            android:background="@drawable/profile_today_enquiry"
            android:layout_height="60dp">

        </de.hdodenhof.circleimageview.CircleImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="Akshay Ruhal"
                    android:textColor="@color/purple_700"
                    android:textSize="15sp">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="15dp"
                        android:src="@drawable/time"
                        android:layout_height="15dp">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Time - 11:00am To 03:00pm "
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="#787474"
                        android:textSize="12sp"
                        android:layout_height="wrap_content">

                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="15dp"
                        android:src="@drawable/time"
                        android:layout_height="15dp">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Total Time: 5hours"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="#787474"
                        android:textSize="12sp"
                        android:layout_height="wrap_content">

                    </TextView>


                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:background="@drawable/back_rounded_blue"
                android:layout_marginLeft="10dp"
                android:gravity="center"

                android:layout_gravity="center"
                android:layout_height="65dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="4hrs"
                        android:gravity="center"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="14sp"
                        android:textColor="#02A255"
                        android:layout_height="wrap_content">

                    </TextView>

                    <View
                        android:layout_width="wrap_content"
                        android:background="#D7D6D6"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="1dp">

                    </View>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="5hrs"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="14sp"
                        android:textColor="#A94107"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>







            </LinearLayout>

        </LinearLayout>






    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:background="#D7D6D6"
        android:layout_height="1dp">

    </View>


</LinearLayout>




